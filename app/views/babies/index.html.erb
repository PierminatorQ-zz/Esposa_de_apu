<p id="notice"><%= notice %></p>

<h1 class="is-size-4">Babies</h1>

<table class="table is-bordered is-hoverable mt-5">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Total cantidad bebido</th>
      <th>Total tiempo bebido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @babies.each do |baby| %>
      <tr>
        <td><%= baby.name %></td>
        <td><%= baby.total_drinking %></td>
        <td><%= baby.total_duration %></td>
        <td><%= link_to 'Show', baby, class:"tag is-danger is-light" %></td>
        <td><%= link_to 'Edit', edit_baby_path(baby), class:"tag is-danger is-light" %></td>
        <td><%= link_to 'Destroy', baby, method: :delete, data: { confirm: 'Are you sure?' }, class:"tag is-danger is-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

